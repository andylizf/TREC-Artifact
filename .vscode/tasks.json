{
  "version": "2.0.0",
  "options": {
    "env": {
      "CUDA_LAUNCH_BLOCKING": "1" // ! To profile with Nsight Systems
    }
  },
  "tasks": [
    {
      "label": "TorchExtension Build",
      "type": "shell",
      // "command": "rm -rf build/temp.linux-x86_64-cpython-312 && python setup.py install",
      "command": "python setup.py install",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Create profile-build Directory",
      "type": "shell",
      "command": "mkdir -p ${workspaceFolder}/profile-build",
      "dependsOn": "TorchExtension Build",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run CMake",
      "type": "shell",
      "command": "cmake .. -DUSE_NVTX=ON",
      "options": {
        "cwd": "${workspaceFolder}/profile-build"
      },
      "dependsOn": "Create profile-build Directory",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Make",
      "type": "shell",
      "command": "make",
      "options": {
        "cwd": "${workspaceFolder}/profile-build"
      },
      "dependsOn": "Run CMake",
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Profile with Nsight Systems",
      "type": "shell",
      "command": "nsys profile ./prof",
      "options": {
        "cwd": "${workspaceFolder}/profile-build"
      },
      "dependsOn": "Make",
      "group": "test",
      "problemMatcher": []
    }
  ]
}
